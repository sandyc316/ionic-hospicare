    {
        "compilerOptions": {
            "allowSyntheticDefaultImports": true,
            "declaration": false,
            "emitDecoratorMetadata": true,
            "experimentalDecorators": true,
            "lib": [
                "dom",
                "es2015"
            ],
            "module": "es2015",
            "moduleResolution": "node",
            "sourceMap": true,
            "target": "es5",
            "baseUrl": "./src",
            "paths": {
                "@app/*": ["app/*"],
                "@app-core/*": ["app/core/*"],
                "@app-services/*": [ "app/services/*" ],
                "@app-modules/*": [ "app/modules/*" ],
                "@app-models/*": [ "app/models/*" ]
            }
        },
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "node_modules",
            "www",

        ],
        "compileOnSave": true,
        "atom": {
            "rewriteTsconfig": false
        }
    }